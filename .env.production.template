# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Application Configuration
NODE_ENV=production
APP_NAME=Boilerplate API
APP_PORT=3000

# Database Configuration
DATABASE_URL=mongodb://username:password@localhost:27017/boilerplate
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=secure_root_password
MONGO_INITDB_DATABASE=boilerplate

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key-256-bits-minimum
REFRESH_TOKEN_EXPIRES_IN=7d

# Application Token Configuration
EMAIL_VERIFICATION_SECRET=your-super-secure-email-verification-secret-256-bits-minimum
EMAIL_VERIFICATION_EXPIRES_IN=24h
PASSWORD_RESET_SECRET=your-super-secure-password-reset-secret-256-bits-minimum
PASSWORD_RESET_EXPIRES_IN=1h

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=secure_redis_password

# Email Configuration
EMAIL_FROM=noreply@yourcompany.com
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_SECURE=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
CORS_ORIGIN=https://yourfrontend.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=24h

# Health Check
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_INTERVAL=30s
