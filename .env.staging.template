# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in the values

# Application Configuration
NODE_ENV=staging
APP_NAME=Boilerplate API (Staging)
APP_PORT=3000

# Database Configuration
DATABASE_URL=mongodb://username:password@staging-db:27017/boilerplate-staging
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=staging_root_password
MONGO_INITDB_DATABASE=boilerplate-staging

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=staging-refresh-token-secret-key-256-bits-minimum
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://staging-redis:6379
REDIS_PASSWORD=staging_redis_password

# Email Configuration (Use test email service)
EMAIL_FROM=noreply@staging.yourcompany.com
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-mailtrap-username
EMAIL_PASS=your-mailtrap-password
EMAIL_SECURE=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=50

# CORS Configuration
CORS_ORIGIN=https://staging.yourfrontend.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security
BCRYPT_ROUNDS=10
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=24h

# Health Check
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_INTERVAL=30s
