# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/boilerplate-dev

# JWT Configuration
JWT_
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration
# Leave these empty for development (mock email service will be used)
# Set these values for production deployment
EMAIL_SERVICE_HOST=
EMAIL_SERVICE_PORT=587
EMAIL_SERVICE_USER=
EMAIL_SERVICE_PASS=
EMAIL_SERVICE_FROM=noreply@yourapp.com

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Application Info
APP_NAME=Boilerplate Backend
APP_VERSION=1.0.0
