# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/boilerplate-dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Application Token Configuration (Optional - falls back to JWT_SECRET if not set)
EMAIL_VERIFICATION_SECRET=your-email-verification-secret-change-in-production
EMAIL_VERIFICATION_EXPIRES_IN=24h
PASSWORD_RESET_SECRET=your-password-reset-secret-change-in-production
PASSWORD_RESET_EXPIRES_IN=1h

# Email Configuration
# For development, these can be left empty (mock email service will be used)
# For production, all EMAIL_SERVICE_* variables are required
EMAIL_SERVICE_HOST=smtp.gmail.com
EMAIL_SERVICE_PORT=587
EMAIL_SERVICE_USER=your-email@gmail.com
EMAIL_SERVICE_PASS=your-app-password
EMAIL_SERVICE_FROM=noreply@yourapp.com

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Application Info
APP_NAME=Boilerplate Backend
APP_VERSION=1.0.0
